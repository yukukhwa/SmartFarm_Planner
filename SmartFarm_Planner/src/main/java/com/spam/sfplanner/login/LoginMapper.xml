<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spam.sfplanner.login.LoginMapper">
	<!-- loginDb에 있는 sp_farm_member 테이블에 id와 pw와 일치하면 loginDb를 가져오는 쿼리문 -->
	<select id="oneSelectFarmMember"
			parameterType="com.spam.sfplanner.login.LoginDb"
			resultType="com.spam.sfplanner.login.LoginDb">
		SELECT
			f_member_id AS id,
			f_member_pw AS pw
		FROM sp_farm_member
		WHERE f_member_id = #{id}
		AND f_member_pw = #{pw}
	</select>
</mapper>